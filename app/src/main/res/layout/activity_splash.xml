<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical"
    tools:context=".Activity.Activity_Splash">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:alpha="0.7"
            android:scaleType="fitXY"
            android:src="@drawable/star_alphabg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp" />

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/astrology_lottie" />

            <TextView
                android:id="@+id/tv2"
                style="@style/bold_TextviewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:gravity="center"
                android:text="@string/app_name"
                android:textSize="@dimen/_22sdp" />

            <TextView
                android:id="@+id/tv3"
                style="@style/reg_TextviewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:alpha="0.8"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/_1sdp"
                android:text="@string/splash_tagline"
                android:textColor="@color/white" />


        </LinearLayout>


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lv_dots_loader"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:adjustViewBounds="true"
            app:lottie_autoPlay="true"
            app:lottie_colorFilter="@color/white"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/dots_loader" />

    </FrameLayout>
</LinearLayout>