<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:layoutDirection="ltr">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_60"
        android:background="#D10000"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_20"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/dim_50"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dim_15"
        app:cardElevation="@dimen/dim_2">


        <android.widget.Button
            android:id="@+id/btnOpenOfferwall"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_60"
            android:background="#D10000"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Open Offerwall"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_20"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>