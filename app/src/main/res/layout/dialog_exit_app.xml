<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9000000"
    android:gravity="center"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/white_bg"
        android:backgroundTint="@color/color_header"
        android:elevation="@dimen/_5sdp"
        android:paddingBottom="@dimen/_12sdp">

        <ImageView
            android:id="@+id/iv_exitimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_70sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:adjustViewBounds="true"
            android:src="@drawable/img_exit" />

        <TextView
            android:id="@+id/tv_exit_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_exitimg"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/font_regular"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:text="Exit From App"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_exit_title"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:fontFamily="@font/font_regular"
            android:gravity="center"
            android:letterSpacing="0.05"
            android:text="Do you really want to exit the app ?"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp" />

        <LinearLayout
            android:id="@+id/ll_bottom_buttons"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/tv_sub_title"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_exit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/exit_btnbg"
                android:fontFamily="@font/font_semibold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:letterSpacing="0.08"
                android:text="Close"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />

            <Space
                android:layout_width="@dimen/_12sdp"
                android:layout_height="match_parent" />


            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/exit_btnbg"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/font_semibold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:letterSpacing="0.08"
                android:text="Cancel"
                android:textColor="@color/app_bg"
                android:textSize="@dimen/_14sdp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>