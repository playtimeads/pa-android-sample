<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <include layout="@layout/layout_header" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/all_usebg"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_datedisplay"
                style="@style/medium_TextviewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="true"
                android:paddingStart="@dimen/_12sdp"
                android:singleLine="true"
                android:text="15/07/2015" />

            <TextView
                android:id="@+id/tv_day"
                style="@style/medium_TextviewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="Wednesday" />

            <ImageView
                android:id="@+id/iv_pickdate"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/ic_date" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_day"
                style="@style/bold_TextviewStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_weight="2"
                android:background="@drawable/btn_select"
                android:text="Day"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp" />

            <Space
                android:layout_width="@dimen/_15sdp"
                android:layout_height="match_parent" />


            <Button
                android:id="@+id/btn_night"
                style="@style/bold_TextviewStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_weight="2"
                android:background="@drawable/btn_unselect"
                android:text="Night"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_muhrat_pos"
            style="@style/bold_TextviewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center"
            android:paddingVertical="@dimen/_5sdp"
            android:text="@string/labh_day"
            android:textSize="@dimen/_15sdp" />


        <ListView
            android:id="@+id/list_muhrat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:background="@drawable/all_usebg"
            android:divider="@color/white"
            android:dividerHeight="@dimen/_1sdp"
            android:drawSelectorOnTop="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:scrollbars="none" />

    </LinearLayout>

</LinearLayout>
