<?xml version="1.0" encoding="utf-8"?>
<com.zodiacscope.zenith.astroverse.Custom_Views.Advance_3d_DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/color_header"
                app:theme="@style/ToolbarColoredBackArrow"
                app:titleTextColor="@color/white"
                app:popupTheme="@style/AppTheme.PopupOverlay" />


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/iv_today_muhrat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ig_today_subh_muhrat" />

                        <Space
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:id="@+id/iv_today_horoscope"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ig_today_horoscope" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:layout_marginVertical="@dimen/_20sdp"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/iv_match_making"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ig_matchmaking" />

                        <Space
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:id="@+id/iv_lucky_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ig_luckyinsights" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/iv_kundli"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ig_knowkundali" />

                        <Space
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:id="@+id/iv_festival"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ig_indian_festival" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:layout_marginVertical="@dimen/_20sdp"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/iv_love_compability"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ig_love_compatibility" />

                        <Space
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:id="@+id/iv_mole_interpretaion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ig_mole" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/color_header"
        android:fitsSystemWindows="true"
        android:paddingStart="@dimen/_5sdp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:headerLayout="@layout/nav_header_main"
        app:itemIconSize="@dimen/_22sdp"
        app:itemIconTint="@color/white"
        app:itemTextAppearance="@style/medium_TextviewStyle"
        app:itemVerticalPadding="@dimen/_10sdp"
        app:menu="@menu/activity_home_drawer" />

</com.zodiacscope.zenith.astroverse.Custom_Views.Advance_3d_DrawerLayout>
